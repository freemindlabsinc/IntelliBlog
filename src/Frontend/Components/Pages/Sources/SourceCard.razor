<FluentCard MinimalStyle="true" Style="background-color: blue">
    <FluentGrid>

        <FluentGridItem xs="9">
            <FluentStack Orientation="Orientation.Vertical">
                <FluentStack Orientation="Orientation.Horizontal">
                    <FluentBadge Appearance="Appearance.Neutral">@Source.Id</FluentBadge>
                    <FluentLabel Typo="Typography.H5">@Source.Name</FluentLabel>
                </FluentStack>

                <FluentStack>
                    <FluentLabel Typo="Typography.Subject">@Source.Description</FluentLabel>
                </FluentStack>

                <FluentAnchor Href="@Source.Url" title="Anchor tooltip">Anchor</FluentAnchor>
            </FluentStack>

            &nbsp;
            <FluentStack Wrap="true">
                @foreach (var tag in Source.Tags)
                {
                    <FluentBadge Fill="highlight" Color="white" BackgroundColor="blue">@tag</FluentBadge>
                }
            </FluentStack>
            
        </FluentGridItem>

        <FluentGridItem Class="wrapper" xs="3">
            <img src="@Source.Image" alt="@Source.Name" />
        </FluentGridItem>

    </FluentGrid>
</FluentCard>


@code {
    [Parameter]
    public ISourceCardData Source { get; set; } = default!;
    
}