@inherits LayoutComponentBase


<style>
    img {
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        height: 100%;
    }
</style>

<FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
<FluentToastProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />

<FluentDesignTheme StorageName="theme" 
    Mode="DesignThemeModes.Dark"
    OfficeColor="OfficeColor.Yammer" />

<FluentLayout>
    <FluentHeader>
       <Frontend.Components.Controls.AppButtons />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>            
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <FluentLabel>Copyright © 2024 Free Mind Labs, inc.</FluentLabel>
        <FluentSpacer />
        <a href="./about" target="_blank">About Us</a>
    </FluentFooter>            
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

