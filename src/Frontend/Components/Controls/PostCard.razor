<style>
    img {
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }
</style>



<FluentCard Height="170">
    <img src="@Post.Image" height="130px" style="test" />    
    <FluentBadge Appearance="Appearance.Accent">@Post.Id</FluentBadge>
    <FluentLabel Typo="Typography.H4" >@Post.Title</FluentLabel>
    <FluentLabel Typo="Typography.Subject" >@Post.Description</FluentLabel>
</FluentCard>

@code {
    [Parameter]
    public IPostCardData Post { get; set; } = default!;
    
}