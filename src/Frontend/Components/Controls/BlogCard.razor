<style>
    img {
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }
</style>

<FluentCard Height="120">
    <FluentStack Orientation="Orientation.Horizontal">
        <img src="@Blog.Image" height="130px" style="test" />
        <FluentStack Orientation="Orientation.Vertical">
            <FluentBadge>@Blog.Id</FluentBadge>
            <FluentLabel Typo="Typography.H3">@Blog.Name</FluentLabel>
            <FluentLabel Typo="Typography.Body">@Blog.Description</FluentLabel>
        </FluentStack>

    </FluentStack>
</FluentCard>

@code {
    [Parameter]
    public IBlogCardData Blog { get; set; } = default!;
    
}