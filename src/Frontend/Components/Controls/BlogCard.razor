<style>
    img {
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        width: 160px;
        height: 100px;
    }

    .wrapper {
        display: inline-block;
        height: 150px;
        width: 250px;
        padding: 5px;
        margin: 5px;
        background: lightgray;
    }

    .wrapper img {
        height: 100%;
        width: 100%;
        object-fit: contain;
    }
</style>

<FluentCard MinimalStyle="true">
    <FluentGrid>

        <FluentGridItem xs="9">
            <FluentStack Orientation="Orientation.Vertical">
                <FluentStack Orientation="Orientation.Horizontal">
                    <FluentBadge Appearance="Appearance.Neutral">@Blog.Id</FluentBadge>
                    <FluentLabel Typo="Typography.H5">@Blog.Name</FluentLabel>
                </FluentStack>

                <FluentStack>
                    <FluentLabel Typo="Typography.Subject">@Blog.Description</FluentLabel>
                </FluentStack>
            </FluentStack>

            &nbsp;
            <FluentStack Wrap="true">
                @foreach (var tag in Blog.Tags)
                {
                    <FluentBadge Fill="highlight" Color="white" BackgroundColor="blue">@tag</FluentBadge>
                }
            </FluentStack>

            &nbsp;
            @* <FluentStack>
                <FluentBadge Appearance="Appearance.Neutral">@Blog.CreatedOn.ToString("yyyy-MM-dd@hh:mm")</FluentBadge>
                <FluentBadge Appearance="Appearance.Neutral">By @Blog.CreatedBy</FluentBadge>
            </FluentStack> *@

           @*  &nbsp;
            <FluentStack>
                <FluentButton Appearance="Appearance.Accent" OnClick="HandleClick">Edit</FluentButton>
                <FluentButton Appearance="Appearance.Accent" OnClick="HandleClick">Like</FluentButton>
            </FluentStack> *@
        </FluentGridItem>

        <FluentGridItem Class="wrapper" xs="3">
            <img src="@Blog.Image" alt="@Blog.Name" />
        </FluentGridItem>

    </FluentGrid>
</FluentCard>


@code {
    [Parameter]
    public IBlogCardData Blog { get; set; } = default!;
    
}